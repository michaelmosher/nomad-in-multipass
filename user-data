packages:
  - "containerd.io"
  - "docker-ce"
  - "docker-ce-cli"
  - "java-11-amazon-corretto-jdk"
  - "unzip"
  - ["nomad", "1.4.*"]

write_files:
  - content: |
      [Resolve]
      MulticastDNS=yes
    path: /etc/systemd/resolved.conf.d/mdns.conf

  # On Ubuntu 22.04 running on Multipass for macOS (backed by QEMU), my network
  # interface is consistently named "enp0s1". Use `ip link` to find the
  # appropriate name and update this accordingly.
  - content: |
      [Match]
      Name=enp0s1

      [Network]
      MulticastDNS=yes
    path: /etc/systemd/network/10-netplan-enp0s1.network.d/mdns.conf

  - content: |
      datacenter = "multipass"
      data_dir = "/opt/nomad/data"

      server {
        enabled          = true
        bootstrap_expect = 3
        server_join {
          retry_join = [
            "nomad-test-1.local",
            "nomad-test-2.local",
            "nomad-test-3.local",
          ]
        }
      }

      client {
        enabled = true
      }

      ui {
        enabled = true
      }

    path: /etc/nomad.d/nomad.hcl

runcmd:
  - [systemctl, restart, systemd-resolved]
  - [systemctl, restart, systemd-networkd]
  - [systemctl, enable, nomad]
  - [systemctl, start, nomad]
